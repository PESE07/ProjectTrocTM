<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="394dp"
        android:height="48dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_password_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_user" />

    <EditText
        android:id="@+id/tv_password_user"
        android:layout_width="199dp"
        android:layout_height="61dp"
        android:layout_marginBottom="73dp"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="@+id/tv_email_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_user"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/tv_email_user"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="41dp"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/tv_password_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>