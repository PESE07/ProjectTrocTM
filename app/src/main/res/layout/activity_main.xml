<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_background"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/et_password_user"
        android:layout_width="169dp"
        android:layout_height="0dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="77dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_user" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="220dp"
        android:height="48dp"
        android:text="Se connecter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_password_user"
        app:layout_constraintTop_toBottomOf="@+id/et_password_user" />

    <EditText
        android:id="@+id/tv_email_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="52dp"
        android:hint="Email"
        app:layout_constraintBottom_toTopOf="@+id/et_password_user"
        app:layout_constraintEnd_toEndOf="@+id/et_password_user"
        app:layout_constraintStart_toStartOf="@+id/et_password_user"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>